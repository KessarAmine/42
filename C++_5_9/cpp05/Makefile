all:
	@clear
	@make -C ./ex00
	@make -C ./ex01
	@make -C ./ex02
	@make -C ./ex03
	@clear
	@echo "all set"
	@echo "==============ex00=============="
	@./ex00/ex00
	@echo "==============ex01=============="
	@./ex01/ex01
	@echo "==============ex02=============="
	@./ex02/ex02
	@echo "==============ex03=============="
	@./ex02/ex02

fclean:
	@clear
	make fclean -C ./ex00
	make fclean -C ./ex01
	make fclean -C ./ex02
	make fclean -C ./ex03
	@clear
